{
  "name": "webview",
  "version": "1.0.0",
  "scripts": {
    "start": "npm run server",
    "server": "npm run tsc:config && webpack-dev-server --config config/tsc/dev.js",
    "clean": "rm -rf dist",
    "prebuild": "npm run lint && npm run test && npm run tsc:config",
    "build": "npm run clean && webpack --config config/tsc/prod.js",
    "test": "jest --coverage",
    "tslint": "tslint",
    "lint": "npm run tslint \"{src,__tests__,config}/**/*.ts\"",
    "prepush": "npm run build",
    "tsc": "rm -rf tsc && tsc",
    "tsc:config": "rm -rf config/tsc && tsc -p config"
  },
  "dependencies": {
    "echarts": "^3.6.2",
    "intercept-fetch": "^1.2.1",
    "lodash-es": "^4.17.4"
  },
  "devDependencies": {
    "@types/echarts": "0.0.6",
    "@types/jest": "^20.0.2",
    "@types/lodash-es": "^4.14.5",
    "@types/webpack": "^3.0.1",
    "autoprefixer": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "babili-webpack-plugin": "^0.1.2",
    "chalk": "^2.0.1",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^2.1.2",
    "html-webpack-plugin": "^2.29.0",
    "husky": "^0.14.2",
    "jest": "^20.0.4",
    "md5-file": "^3.1.1",
    "moment": "^2.18.1",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.6",
    "pug": "^2.0.0-rc.2",
    "pug-loader": "^2.3.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "ts-jest": "^20.0.6",
    "ts-loader": "^2.2.2",
    "tslint": "^5.4.3",
    "tslint-microsoft-contrib": "^5.0.1",
    "typescript": "^2.4.1",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^2.5.0",
    "webpack-merge": "^4.1.0"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "mapCoverage": true,
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "coverageDirectory": "coverage",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
